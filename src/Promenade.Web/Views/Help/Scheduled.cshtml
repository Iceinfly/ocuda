@model Ocuda.Promenade.Controllers.ViewModels.Help.ScheduleDetailsViewModel

@if (Model?.SegmentText != null)
{
    if (!string.IsNullOrEmpty(Model.SegmentText.Header))
    {
        <h1 class="prom-title">@Model.SegmentText.Header</h1>
    }
    @Html.Raw(Model.SegmentText.Text)
}
else
{
    <h1 class="prom-title">@Localizer[Promenade.ScheduleYourTimeIsScheduled]</h1>
}

@if (Model.ShowEmailMessage)
{
    <p class="lead pt-2">
        <strong>
            @Localizer[Promenade.ScheduleCheckEmail]
        </strong>
    </p>
}

<p class="lead">@Localizer[Promenade.ScheduleAppointmentDetails]</p>

<div class="row">
    <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptRequestedDateAndTime]</strong></div>
    <div class="col-md-9">@Model.DisplayTime</div>
</div>
<div class="row mt-2">
    <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptName]</strong></div>
    <div class="col-md-9">@Model.ScheduleRequest.Name</div>
</div>
<div class="row mt-2">
    <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptPhone]</strong></div>
    <div class="col-md-9">@Model.FormattedPhone</div>
</div>

@if (!string.IsNullOrEmpty(Model.ScheduleRequest.Email))
{
    <div class="row mt-2">
        <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptEmail]</strong></div>
        <div class="col-md-9">@Model.ScheduleRequest.Email</div>
    </div>
}

<div class="row mt-2">
    <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptSubject]</strong></div>
    <div class="col-md-9">@Model.DisplaySubject</div>
</div>
<div class="row mt-2">
    <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptLanguage]</strong></div>
    <div class="col-md-9">@Model.ScheduleRequest.Language</div>
</div>

@if (!string.IsNullOrEmpty(Model.ScheduleRequest.Notes))
{
    <div class="row mt-2">
        <div class="col-md-3 text-md-end"><strong>@Localizer[Promenade.PromptNotes]</strong></div>
        <div class="col-md-9">@Model.ScheduleRequest.Notes</div>
    </div>
}

<div class="row">
    <div class="offset-md-3 mt-2">
        <a href="/"
           class="btn btn-outline-dark m-2">@Localizer[Promenade.ButtonBackToSite]</a>
    </div>
</div>
