@model Ocuda.Promenade.Controllers.ViewModels.Locations.LocationViewModel
@{
    ViewData["Title"] = "LocationFeatureDeatils";
}

<div>
    <table width="100%" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
                <td>
                    <div id="content">
                        @foreach (var feature in Model.LocationFeatures)
                        {
                            <h1>@Model.Location.Name Library @feature.Name</h1>
                            <div id="feature-body">@Html.Raw(feature.BodyText)</div>
                            <div id="feature-text">@Html.Raw(feature.Text)</div>
                        }
                    </div>
                    <p style="margin-left: 1rem;">
                        <a href="/Locations/@Model.Location.Stub" class="btn btn-default">
                            <span class="fa fa-arrow-circle-left" aria-hidden="true"></span>
                            Back to @Model.Location.Name
                        </a>
                    </p>
                </td>
            </tr>
        </tbody>
    </table>
</div>