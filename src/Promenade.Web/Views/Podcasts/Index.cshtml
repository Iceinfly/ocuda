@model Ocuda.Promenade.Controllers.ViewModels.Podcasts.IndexViewModel

<h1>@Localizer[Promenade.PodcastsHeader]</h1>
<div class="row">
    @foreach (var podcast in Model.Podcasts)
    {
        <div class="col-12 col-sm-6 col-md-4 mb-3">
            <div class="card">
                <a asp-action="@nameof(PodcastsController.Podcast)"
                   asp-route-stub="@podcast.Stub"
                   asp-route-culture="">
                    <img class="card-img-top"
                         alt="@podcast.Title"
                         src="@(podcast.ImageThumbnailUrl ?? podcast.ImageUrl)" />
                </a>
                <div class="card-body">
                    <div class="card-title h5">
                        <a asp-action="@nameof(PodcastsController.Podcast)"
                           asp-route-stub="@podcast.Stub"
                           asp-route-culture="">@podcast.Title</a>
                    </div>
                    <p class="card-text">@podcast.Description</p>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.PaginateModel.MaxPage > 1)
{
    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <nav paginate="@Model.PaginateModel"></nav>
        </div>
    </div>
}