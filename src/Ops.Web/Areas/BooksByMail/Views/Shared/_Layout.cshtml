<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="http://internal-assets/fonts/1.0.0/fonts.css" />
    <instance name="test">
        <link rel="stylesheet" href="http://internal-assets/test/1.0.0/test.css" />
    </instance>
    <instance name="development">
        <link rel="stylesheet" href="http://internal-assets/dev/1.0.0/dev.css" />
    </instance>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-static-top navbar-dark bg-dark oc-navbar">
        <a class="navbar-brand"
           asp-area=""
           asp-route-section=""
           asp-controller="Home"
           asp-action="@(nameof(HomeController.Index))">
            <span class="fas fa-mail-bulk"></span>
            <span class="font-weight-light oc-navbrand">Books By Mail</span>
        </a>
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarCollapsableContent"
                aria-controls="navbarCollapsableContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            Menu
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapsableContent">
            <span class="mr-auto"></span>
            <form asp-controller="Home" asp-action="Index" method="get" role="form" class="form-inline">
                <input type="search"
                       id="search"
                       name="search"
                       class="form-control mr-2 mb-1 mb-sm-0"
                       placeholder="Name/Barcode"
                       value="@ViewData["Search"]" />
                <input type="submit" 
                       value="Search" 
                       class="btn btn-info" />
            </form>
        </div>
    </nav>

    <div class="container-fluid">

        @if (TempData[BooksByMail.Keys.TempData.AlertDanger] != null)
        {
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3">
                    <div class="alert alert-danger">@Html.Raw(TempData[BooksByMail.Keys.TempData.AlertDanger])</div>
                </div>
            </div>
        }
        @if (TempData[BooksByMail.Keys.TempData.AlertWarning] != null)
        {
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3">
                    <div class="alert alert-warning">@Html.Raw(TempData[BooksByMail.Keys.TempData.AlertWarning])</div>
                </div>
            </div>
        }
        @if (TempData[BooksByMail.Keys.TempData.AlertSuccess] != null)
        {
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3">
                    <div class="alert alert-success">@Html.Raw(TempData[BooksByMail.Keys.TempData.AlertSuccess])</div>
                </div>
            </div>
        }
        @if (TempData[BooksByMail.Keys.TempData.AlertInfo] != null)
        {
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3">
                    <div class="alert alert-info">@Html.Raw(TempData[BooksByMail.Keys.TempData.AlertInfo])</div>
                </div>
            </div>
        }

        @RenderBody()
    </div>

    <script src="~/js/main.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>