<form asp-action="@nameof(DigitalDisplaysController.UploadAsset)"
      method="post"
      role="form"
      enctype="multipart/form-data">
    <div class="modal fade"
         id="uploadAsset"
         data-bs-backdrop="static"
         data-keyboard="false"
         tabindex="-1"
         aria-labelledby="uploadAssetLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadAssetLabel">Upload image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span class="visually-hidden" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label for="assetFile" class="form-label">Select an image file (.jpg or .png)</label>
                    <div class="input-group">
                        <input type="file"
                               class="form-control"
                               name="assetFile"
                               id="assetFile"
                               accept=".jpg,.png" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit"
                            id="uploadImageButton"
                            class="btn btn-outline-success"
                            button-spinner
                            disabled>
                        <span class="fa-solid fa-file-arrow-up" aria-hidden="true"></span>
                        Upload image
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    document.getElementById("assetFile").addEventListener("change", _ => {
        document.getElementById("uploadImageButton").disabled = _.currentTarget.files.length == 0;
    });

    document.getElementById("uploadAsset").addEventListener("hidden.bs.modal", _ => {
        document.getElementById("assetFile").value = "";
        document.getElementById("uploadImageButton").disabled = true;
    });
</script>