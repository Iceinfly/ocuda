@model Ocuda.Ops.Controllers.Areas.Incident.ViewModel.IncidentViewModelBase

<div class="d-flex justify-content-between">
    <h1>
        @Model.Heading
        @if (!string.IsNullOrEmpty(Model.SecondaryHeading))
        {
            <small class="text-muted">@Model.SecondaryHeading</small>
        }
    </h1>
    <div class="pt-2">
        @if (!string.IsNullOrEmpty(Model.IncidentDocumentLink))
        {
            <a class="btn btn-outline-primary me-2"
               href="@Model.IncidentDocumentLink">View Example</a>
        }
        @if (Model.CanConfigureIncidents)
        {
            <a class="btn btn-outline-primary"
               asp-action="@nameof(HomeController.Configuration)"
               asp-controller="@HomeController.Name">
                Configuration
            </a>
        }
        <a class="btn btn-outline-success me-2"
           asp-action="@nameof(HomeController.Add)"
           asp-controller="@HomeController.Name"
           asp-route-page="@(Model.Page > 1 ? Model.Page : null)">
            <span class="fa-solid fa-circle-plus" aria-hidden="true"></span>
            Add Report
        </a>
        <a class="btn btn-outline-dark"
           asp-area=""
           asp-controller="@Ocuda.Ops.Controllers.HomeController.Name"
           asp-action="@nameof(Ocuda.Ops.Controllers.HomeController.Index)">Back</a>
    </div>
</div>

<div class="row mb-2">
    <div class="col-12">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a asp-action="@nameof(HomeController.Mine)"
                   asp-area="@nameof(Ocuda.Ops.Controllers.Areas.Incident)"
                   asp-controller="@HomeController.Name"
                   class="nav-link"
                   auto-active>
                    @nameof(HomeController.Mine)
                </a>
            </li>
            @if(Model.CanViewLocation)
            {
                <li class="nav-item">
                    <a asp-action="@nameof(HomeController.Locations)"
                       asp-area="@nameof(Ocuda.Ops.Controllers.Areas.Incident)"
                       asp-controller="@HomeController.Name"
                       class="nav-link"
                       auto-active>
                        My Location(s)
                    </a>
                </li>
            }
            @if (Model.CanViewAll)
            {
                <li class="nav-item">
                    <a asp-action="@nameof(HomeController.All)"
                       asp-area="@nameof(Ocuda.Ops.Controllers.Areas.Incident)"
                       asp-controller="@HomeController.Name"
                       class="nav-link"
                       auto-active>
                        @nameof(HomeController.All)
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="@nameof(HistoricalController.Index)"
                       asp-area="@nameof(Ocuda.Ops.Controllers.Areas.Incident)"
                       asp-controller="@HistoricalController.Name"
                       class="nav-link"
                       auto-active>
                        Historical
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

