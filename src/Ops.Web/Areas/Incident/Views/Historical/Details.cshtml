@model Ocuda.Ops.Models.Entities.HistoricalIncident

<div class="row mb-2">
    <div class="col-sm-6">
        <h1>Historical Incident</h1>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-outline-dark mt-2 mb-1 ml-2 float-right"
           asp-controller="@Ocuda.Ops.Controllers.Areas.Incident.HistoricalController.Name"
           asp-action="@(nameof(Ocuda.Ops.Controllers.Areas.Incident.HistoricalController.Index))">Back</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <strong>Type of incident</strong>
        @Model.IncidentType
    </div>
    <div class="col-12 mt-2">
        <strong>Date/time of incident</strong>
        @Model.IncidentAtString
    </div>
    <div class="col-sm-6 mt-2">
        <strong>Branch</strong>
        @Model.Branch
    </div>
    <div class="col-sm-6 mt-2">
        <strong>Phone Number</strong>
        @Model.PhoneNumber
    </div>
    <div class="col-12 mt-2">
        <strong>Location where incident occurred</strong>
    </div>
    <div class="col-12 mt-2">
        @Model.Location
    </div>
    <div class="col-12 mt-2">
        <strong>Describe the incident (i.e., what occurred) as reported by:</strong>
        @Model.DescribedBy
    </div>
    <div class="col-12 mt-2">
        @Model.Description
    </div>
    <div class="col-12 mt-2">
        <strong>Names, addresses and phone numbers of persons injured and/or description of property damaged</strong>
    </div>
    <div class="col-12">
        @Model.PeopleInvolved
    </div>
    <div class="col-12 mt-2">
        <strong>Witnesses (include addresses)</strong>
    </div>
    <div class="col-12">
        @Model.Witnesses
    </div>
    <div class="col-12 mt-2">
        <strong>Action taken (first aid, called police, etc.)</strong>
    </div>
    <div class="col-12">
        @Model.ActionTaken
    </div>
    <div class="col-12 mt-2">
        <strong>Comments</strong>
    </div>
    <div class="col-12">
        @Model.Comments
    </div>
    <div class="col-12 mt-2">
        <strong>
            Your name
        </strong>
        @Model.ReportedBy
    </div>
    <div class="col-12">
        <strong>
            Your job title
        </strong>
        @Model.ReportedByTitle
    </div>    <div class="col-12">
        <strong>
            Date Incident Reported
        </strong>
        @Model.DateReportedString
    </div>
</div>