@model Ocuda.Ops.Controllers.Areas.SiteManagement.ViewModels.Emedia.IndexViewModel

<div class="row mb-2">
    <div class="col-sm-6">
        <h1>
            Emedia Groups
        </h1>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-outline-dark mt-2 mb-1 ml-2 float-right"
           asp-controller="@Ocuda.Ops.Controllers.Areas.SiteManagement.HomeController.Name"
           asp-action="@(nameof(Ocuda.Ops.Controllers.Areas.SiteManagement.HomeController.Index))">Back</a>
    </div>
</div>

<form id="addForm" role="form">
    <div modal id="addModal" isLarge="true" name="Emedia Group" type="Ocuda.Utility.TagHelpers.ModalTypes.Add">
        <input id="addName" asp-for="EmediaGroup.Name" formgroup />
    </div>
</form>

<form asp-controller="@EmediaController.Name" asp-action="@(nameof(EmediaController.DeleteGroup))" method="post" role="form">
    <input id="deleteCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />

    <input id="deleteId" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="deleteName" asp-for="EmediaGroup.Id" type="hidden" />

    <div modal id="deleteModal" name="Emedia Group" type="Ocuda.Utility.TagHelpers.ModalTypes.Delete"></div>
</form>

<div class="row">
    <div class="col-12">
        <div>
            <table class="table table-sm table-bordered link-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Items</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model.EmediaGroups)
                    {
                        <tr>
                            <td class="align-middle">
                                <a asp-action="@(nameof(EmediaController.GroupDetail))" asp-route-id="@group.Id">
                                    @group.Name
                                </a>
                            </td>
                            <td class="align-middle">@group.Emedias.Count</td>
                            <td class="align-middle">
                                <button type="button"
                                        class="btn btn-outline-danger"
                                        data-toggle="modal"
                                        data-target="#deleteModal"
                                        data-id="@group.Id"
                                        data-name="@group.Name">
                                    <span class="fas fa-minus-circle" aria-hidden="true"></span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.PaginateModel.MaxPage > 1)
{
    <paginate paginateModel="@Model.PaginateModel"></paginate>
}

@section scripts {
    <script>
        $("#deleteModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var name = button.data("name");
            var modal = $(this);
            $("#deleteId").val(id);
            $("#deleteName").val(name);
            modal.find(".modal-text").text("Are you sure you want to delete \"" + name + "\"?");
        });
    </script>
}