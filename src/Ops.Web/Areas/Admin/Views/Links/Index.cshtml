@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Links.IndexViewModel

<form id="addForm" role="form">
    <input asp-for="@Model.LinkLibrary.SectionId" value="@Model.SectionId" type="hidden" />
    <input id="addCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <div modal id="addModal" name="Link Library" type="Ocuda.Utility.TagHelpers.ModalTypes.Add">
        <input id="addName" asp-for="LinkLibrary.Name" formgroup />
    </div>
</form>

<form id="editForm" role="form">
    <input id="editCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="editId" asp-for="LinkLibrary.Id" type="hidden" />
    <div modal id="editModal" name="Link Library" type="Ocuda.Utility.TagHelpers.ModalTypes.Edit">
        <input id="editName" asp-for="LinkLibrary.Name" formgroup />
    </div>
</form>

<form id="deleteForm" asp-controller="Links" asp-action="@(nameof(LinksController.DeleteLibrary))" method="post" role="form">
    <input id="deleteCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="deleteId" asp-for="LinkLibrary.Id" type="hidden" />
    <input id="deleteName" asp-for="LinkLibrary.Name" type="hidden" />
    <div modal id="deleteModal" name="Link Library" type="Ocuda.Utility.TagHelpers.ModalTypes.Delete"></div>
</form>

<div class="mb-2">
    <button class="btn btn-outline-secondary text-dark"
            data-toggle="modal"
            data-target="#addModal">
        Add New Link Library
    </button>
</div>

@if (Model.Libraries.Count() == 0)
{
    <div class="alert alert-warning">No Link Libraries Found</div>
}
else
{
    <table class="table table-sm table-bordered link-table">
        <thead>
            <tr>
                <th>Library</th>
                <th>Navigation</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var library in Model.Libraries)
            {
                <tr>
                    <td class="rowlink-parent">
                        <a asp-action="@nameof(LinksController.Library)" asp-route-id="@library.Id" class="rowlink">
                            @library.Name
                        </a>
                    </td>
                    <td>@(library.IsNavigation ? "Yes" : "No")</td>
                    <td align="center" class="on-top">
                        <button type="button"
                                class="btn btn-info btn-xs"
                                data-toggle="modal"
                                data-target="#editModal"
                                data-id="@library.Id"
                                data-library="@library.Name">
                            <span class="fa fa-pencil-alt" aria-hidden="true"></span>
                        </button>
                        <button type="button"
                                class="btn btn-danger btn-xs"
                                data-toggle="modal"
                                data-target="#deleteModal"
                                data-id="@library.Id"
                                data-library="@library.Name">
                            <span class="fa fa-times" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.PaginateModel.MaxPage > 1)
    {
        <paginate paginateModel="@Model.PaginateModel"></paginate>
    }
}

@section scripts {
    <script>
        $(document).ready(function () {
            $('.rowlink-parent').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 12);
            });
        });
        $(window).resize(function () {
            $('.rowlink-parent').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 12);
            });
        });

        $("#addForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);

            $.post("@(Url.Action(nameof(LinksController.CreateLibrary), "Links"))",
                form.serialize(),
                function (response) {
                    if (response.success == true) {
                        location.reload();
                    }
                    else {
                        alert(response.message);
                        ResetSpinners();
                    }
                });
        });

        $("#editForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);

            $.post("@(Url.Action(nameof(LinksController.EditLibrary), "Links"))",
                form.serialize(),
                function (response) {
                    if (response.success == true) {
                        location.reload();
                    }
                    else {
                        alert(response.message);
                        ResetSpinners();
                    }
                });
        });

        $("#editModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var library = button.data("library");
            var modal = $(this);
            $("#editId").val(id);
            modal.find("#editName").val(library);
        });

        $("#deleteModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var library = button.data("library");
            var modal = $(this);
            $("#deleteName").val(library);
            $("#deleteId").val(id);
            modal.find(".modal-text").text(" Are you sure you want to delete \"" + library + "\"?");
        });
    </script>
}
