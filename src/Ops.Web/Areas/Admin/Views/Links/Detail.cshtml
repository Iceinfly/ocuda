@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Links.DetailViewModel

<form asp-action="@Model.Action" method="post" role="form">
    <input asp-for="@Model.LibraryId" type="hidden" />

    @if (Model.Action == nameof(LinksController.Edit))
    {
        <input asp-for="Link.Id" type="hidden" />
    }

    <input asp-for="Link.Name" formgroup />
    <input asp-for="Link.Url" formgroup />
    <input asp-for="Link.Icon" formgroup />

    <div class="row">
        <div class="offset-md-3 col-md-9">
            <a class="btn btn-outline-secondary text-dark" asp-action="@(nameof(LinksController.Library))" asp-route-id="@Model.LibraryId">Cancel</a>
            <button type="submit" class="btn btn-success btn-spinner" aria-label="Confirm">
                <span class="fa fa-save" aria-hidden="true"></span>
                Save
                <span class="fa fa-spinner fa-pulse fa-fw d-none"></span>
            </button>
        </div>
    </div>
</form>
