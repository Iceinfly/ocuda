@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Posts.CategoriesViewModel

@await Html.PartialAsync("_PostsPartial")

<form id="addForm" role="form">
    <input asp-for="@Model.Category.SectionId" value="@Model.SectionId" type="hidden" />
    <input id="addCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />

    <div modal id="addModal" name="Post Category" type="Ocuda.Utility.TagHelpers.ModalTypes.Add">
        <input id="addName" asp-for="Category.Name" formgroup />
    </div>
</form>

<form id="editForm" role="form">
    <input id="editCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="editId" asp-for="Category.Id" type="hidden" />

    <div modal id="editModal" name="Post Category" type="Ocuda.Utility.TagHelpers.ModalTypes.Edit">
        <input id="editName" asp-for="Category.Name" formgroup />
    </div>
</form>

<form id="deleteForm" asp-controller="Posts" asp-action="@(nameof(PostsController.DeleteCategory))" method="post" role="form">
    <input id="deleteCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="deleteId" asp-for="Category.Id" type="hidden" />
    <input id="deleteName" asp-for="Category.Name" type="hidden" />

    <div modal id="deleteModal" name="Link Library" type="Ocuda.Utility.TagHelpers.ModalTypes.Delete"></div>
</form>

<div class="mb-2">
    <button class="btn btn-outline-secondary text-dark"
            data-toggle="modal"
            data-target="#addModal">
        Add New Post Category
    </button>
</div>

@if (Model.Categories.Count() == 0)
{
    <div class="alert alert-warning">No Post Categories Found</div>
}
else
{
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td align="center">
                        <button type="button"
                                class="btn btn-info btn-xs"
                                data-toggle="modal"
                                data-target="#editModal"
                                data-id="@category.Id"
                                data-name="@category.Name">
                            <span class="fa fa-pencil-alt" aria-hidden="true"></span>
                        </button>
                        <button type="button"
                                class="btn btn-danger btn-xs"
                                data-toggle="modal"
                                data-target="#deleteModal"
                                data-id="@category.Id"
                                data-name="@category.Name">
                            <span class="fa fa-times" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.PaginateModel.MaxPage > 1)
    {
        <paginate paginateModel="@Model.PaginateModel"></paginate>
    }
}

@section scripts {
    <script>
        $("#addForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);

            $.post("@(Url.Action(nameof(PostsController.CreateCategory), "Posts"))",
                form.serialize(),
                function (response) {
                    if (response.success == true) {
                        location.reload();
                    }
                    else {
                        alert(response.message);
                        ResetSpinners();
                    }
                });
        });

        $("#editForm").submit(function (e) {
            e.preventDefault();
            var form = $(this);

            $.post("@(Url.Action(nameof(PostsController.EditCategory), "Posts"))",
                form.serialize(),
                function (response) {
                    if (response.success == true) {
                        location.reload();
                    }
                    else {
                        alert(response.message);
                        ResetSpinners();
                    }
                });
        });

        $("#editModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var name = button.data("name");
            var modal = $(this);
            $("#editId").val(id);
            modal.find("#editName").val(name);
        });

        $("#deleteModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var name = button.data("name");
            var modal = $(this);
            $("#deleteName").val(name);
            $("#deleteId").val(id);
            modal.find(".modal-text").text("Are you sure you want to delete \"" + name + "\"?");
        });
    </script>
}
